<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_loadData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Load Data"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_Contact" />

    <EditText
        android:id="@+id/et_ContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Please enter Contact Name"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_loadData" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/et_ContactName">

        <Button
            android:id="@+id/btn_AddData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Add Data"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_Contact" />

        <Button
            android:id="@+id/btn_DeletData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Delet Data"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_Contact" />

        <Button
            android:id="@+id/btn_updateData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Update Data"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_Contact" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>